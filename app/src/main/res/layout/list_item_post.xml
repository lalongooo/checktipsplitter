<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_profile_picture" />

    <TextView
        android:id="@+id/tvUserName"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jorge E. HernÃ¡ndez"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Luis Potosi"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvFromLabel"
        android:layout_alignBottom="@+id/tvFromLabel"
        android:layout_toRightOf="@+id/tvFromLabel"/>

    <TextView
        android:id="@+id/tvToLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:layout_below="@+id/tvFromLabel"
        android:layout_alignLeft="@+id/tvFromLabel" />

    <TextView
        android:id="@+id/tvTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Luis Potosi"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvToLabel"
        android:layout_alignBottom="@+id/tvToLabel"
        android:layout_toRightOf="@+id/tvToLabel"/>


    <TextView
        android:id="@+id/tvAcademicLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secundaria "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvToLabel"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Hace 6 horas"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/tvPostUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/tvUserName"
        android:text="hdez.jeduardo@gmail.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPostUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/tvPostUserEmail"
        android:text="8116916048"
        android:textColor="@color/primary"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/tvPostUserPhone"
        android:layout_marginTop="5dp"
        android:text="Este es un texto largo de ejemplo, para ver la ubicacion del elemento en cada elemento de la lista de publicaciones"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvFromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvPostText"
        android:layout_alignStart="@+id/tvPostText"
        android:layout_below="@+id/tvPostText"
        android:layout_marginTop="10dp"
        android:text="De: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />
</RelativeLayout>